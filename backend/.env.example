# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/clicon

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production_2024
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_secret_key_change_this_in_production_2024
